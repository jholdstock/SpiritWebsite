{% extends "admin/admin-base.twig" %}

{% block head %}
  
  <style>
	  input[type=text], input[type=password] {
	  	display: inline;
	  }
	</style>

	<meta name="viewport" content="width=400">

{% endblock %}

{% block body %}
	
	<h1>Login</h1>
	
	{% if authError %}
		<div class="error" style="width: 10em;">
			Incorrect details
		</div>
	{% endif %}
	
	<form action="admin" method="post">
		<label>Username:</label><input type="text" name="username"></input>
		<br />
		<label>Password:</label><input type="password" name="password"></input>
		<input type="submit" value="Submit"></input>
	</form>
	<br />
	<div class="success" style="width: 20em; display: none;">
			Password emailed to Spirit Design
		</div>
	<a href="#" id="forgotten">Forgotten password?</a>

{% endblock %}

{% block extraJs %}
	<script>
	var finished = function() {
		$(".success").show();
	}

	$("#forgotten").on("click", function(){
		$.ajax({
		url: "/forgotten",
		complete: finished,
		});
	});</script>
{% endblock %}
